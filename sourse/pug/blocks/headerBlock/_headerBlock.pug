mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
		+e.container.container
			+e.slider-wrap
				.swiper-container.headerBlock-slide-js
					.swiper-wrapper
						-for(let i = 0; i < 4; i++)
							+headerBlockSlide()
					.swiper-pagination
			//-+pic('headerBlock-1.png')
	// end headerBlock

mixin headerBlockSlide()
	.swiper-slide
		+e.PICTURE.img
			source(srcset="img/@2x/headerBlock-1.png"  media="(min-width:576px)")
			source(srcset="img/@2x/headerBlock-mob-1.png"  media="(max-width:576px)")
			img(loading="lazy" src="img/@2x/headerBlock-1.png" alt="")