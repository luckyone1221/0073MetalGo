		+e.SPAN.d-val=val

mixin sSearchCharItem(key,val)
	.col-sm-auto
		+e.SPAN.key=key
		+e.SPAN.val=val

mixin sSearchRowSelect(txt,selectTxt, addTitleClasses)
	+e.s-row.row.align-items-center&attributes(attributes)
		.col-auto(class=addTitleClasses)=txt
		.col
			//-+input(selectTxt, 'select')
			+e.SELECT.input.form-select(name=selectTxt)&attributes(attributes)
				option(value=selectTxt)=selectTxt
				if block
					block
				else
					option 1
					option 2
					option 3
					option 4


mixin sSearchAdvItem(imgNum)
